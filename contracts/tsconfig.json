{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "deploy/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cache",
    "artifacts",
    "typechain-types"
  ]
}
